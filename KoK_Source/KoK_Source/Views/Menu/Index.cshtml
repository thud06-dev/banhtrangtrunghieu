                                                        @foreach (MenuModels t2 in Model)
                                                        {
                                                            if (t2.MenuRank == "3" && t2.MenuParentId == t1.Id)
                                                            {
                                                                <li class="dd-item" data-id="@t2.Id">
                                                                    <div class="dd-handle">
                                                                        <a class="blue" href="@Url.Action("Edit", "Menu", new {id = t2.Id})">
                                                                            @t2.MenuName
                                                                        </a>
                                                                    </div>
                                                                </li>
                                                            }
                                                        }
                                                    </ol>
                                                }
                                            </li>
                                        }
                                    }
                                </ol>
                            }
                        </li>
                    }
                }
