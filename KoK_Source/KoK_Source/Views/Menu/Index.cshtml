                    if (t.MenuRank == "1")
                    {
                        <li class="dd-item" data-id="@t.Id">
                            <div class="dd-handle">
                                <a class="blue" href="@Url.Action("Edit", "Menu", new {id = t.Id})">
                                    @t.MenuName
                                </a>
                            </div>
