                        @Html.TextBoxFor(m => m.NEWS_SEO_DESC, Model.NEWS_SEO_DESC, new { @class = "col-xs-10 col-sm-5" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1">@Html.DisplayNameFor(m => m.NEWS_SEO_KEYWORD) </label>
