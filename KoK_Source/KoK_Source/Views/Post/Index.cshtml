@model List<KoK_Source.Models.Post.PostModel>
@using KoK_Source.Models.Post
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Post", FormMethod.Post, new { id = "myPost" }))
{
    <div class="row">
        <div class="col-xs-12">
            <h3 class="header smaller lighter blue">jQuery dataTables</h3>

            <div class="clearfix">
                <div class="pull-right tableTools-container"></div>
            </div>
            <div class="table-header">
                Results for "Latest Registered Domains"
            </div>

            <!-- div.table-responsive -->
            <!-- div.dataTables_borderWrap -->
            <div class="btn-group">
                @Html.ActionLink("THÊM MỚI", "Edit", null, new { @class = "btn violet inverse glyphicon glyphicon-plus", @id = "btnAdd" })
                @*<button id="btnAdd" hr="@Url.Action("Edit")" class="btn violet inverse glyphicon glyphicon-plus"> THÊM MỚI</button>*@
            </div>
            <div>
                <table id="dynamic_table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.LabelFor(m => m.First().NEWS_TITLE)</th>
                            <th>@Html.LabelFor(m => m.First().NEWS_DESC)</th>
                            <th>@Html.LabelFor(m => m.First().NEWS_DESC)</th>
                            <th>@Html.LabelFor(m => m.First().ACTIVE)</th>
                            <th width="5%">Del</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() != 0)
                        {
                            foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Edit", "Post", new PostModel { NEWS_ID = item.NEWS_ID })">
                                        @item.NEWS_TITLE
                                    </a>
                                </td>
                                <td>
                                    <p class="">@item.NEWS_DESC</p>
                                </td>
                                <td>
                                    <p class="">@item.NEWS_DESC</p>
                                </td>
                                <td>
                                    @if (item.ACTIVE == true)
                                    {
                                        <input type="checkbox" id="@item.NEWS_ID" class="sw" onchange="AjaxUpdateActive(this)" checked />
                                    }
                                    else
                                    {
                                        <input type="checkbox" id="@item.NEWS_ID" class="sw" onchange="AjaxUpdateActive(this)" />
                                    }
                                    <label class="switch blue" for="@item.NEWS_ID"></label>
                                </td>
                                <td>
                                    <a href="#" onclick="AjaxRemove(this,@item.NEWS_ID)" class="post__del"><i class="pe-7f-close"></i>#</a>
                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
<input id="UrlAjaxUpdateActive" type="hidden" data-request-url="@Url.Action("AjaxUpdateActive","Post")">
<input id="UrlAjaxDelete" type="hidden" data-request-url="@Url.Action("AjaxDelete","Post")" />
<script type="text/javascript" src=@Url.Content("~/Scripts/kok_source/kok.js")></script>
<script type="text/javascript">
    jQuery(function ($) {
        //initiate dataTables plugin
        $('#dynamic_table').DataTable();
    })
</script>