@model List<KoK_Source.Models.Products.ProductsModel>
@using KoK_Source.Models.File
@using KoK_Source.Models.Products
@{
    ViewBag.Title = "Danh sách sản phẩm";
    ViewBag.Message = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@using (Html.BeginForm("Index", "Products", FormMethod.Post, new { id = "myProducts" }))
{
    <div class="row">
        <div class="col-xs-12">
            <h3 class="header smaller lighter blue">@ViewBag.Message</h3>

            <div class="clearfix">
                <div class="pull-right tableTools-container"></div>
            </div>
            <div class="table-header">
                @ViewBag.Title
            </div>

            <!-- div.table-responsive -->
            <!-- div.dataTables_borderWrap -->
            <div class="btn-group">
                @Html.ActionLink("THÊM MỚI", "Edit", null, new { @class = "btn violet inverse glyphicon glyphicon-plus", @id = "btnAdd" })
               
            </div>
            <div>
                <table id="dynamic_table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.LabelFor(m => m.First().NEWS_TITLE)</th>
                            <th>@Html.LabelFor(m => m.First().NEWS_DESC)</th>
                            <th>@Html.LabelFor(m => m.First().ANH)</th>
                            <th>@Html.LabelFor(m => m.First().ACTIVE)</th>
                            <th width="5%">Del</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() != 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Edit", "Products", new ProductsModel { NEWS_ID = item.NEWS_ID })">
                                            @item.NEWS_TITLE
                                        </a>
                                    </td>
                                    <td>
                                        <p class="">@item.NEWS_DESC</p>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ANH))
                                        {
                                            List<FileModel> fileAvatar;
                                            if (!String.IsNullOrEmpty(item.ANH))
                                            {
                                                /*convert FILI_LINK là json thành list file name*/
                                                fileAvatar = new System.Web.Script.Serialization.JavaScriptSerializer().Deserialize<List<FileModel>>(item.ANH);
                                            }
                                            else
                                            {
                                                fileAvatar = null;
                                            }
                                            <img width="50" height="50" src="@Url.Content(fileAvatar.FirstOrDefault().url)" />
                                        }
                                    </td>
                                    <td>
                                        @if (item.ACTIVE == true)
                                        {
                                            <input type="checkbox" id="@item.NEWS_ID" class="sw" onchange="AjaxUpdateActive(this)" checked />
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="@item.NEWS_ID" class="sw" onchange="AjaxUpdateActive(this)" />
                                        }
                                        <label class="switch blue" for="@item.NEWS_ID"></label>
                                    </td>
                                    <td>
                                        <a href="#" onclick="AjaxRemove(this,@item.NEWS_ID)" class="post__del"><i class="pe-7f-close"></i>#</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
<input id="UrlAjaxUpdateActive" type="hidden" data-request-url="@Url.Action("AjaxUpdateActive","Products")">
<input id="UrlAjaxDelete" type="hidden" data-request-url="@Url.Action("AjaxDelete","Products")" />

<script type="text/javascript">
    jQuery(function ($) {
        //initiate dataTables plugin
        $('#dynamic_table').DataTable();
    })
</script>