@model List<KoK_Source.Areas.Admin.Models.Account.AccountModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Index", "Account", FormMethod.Post, new { id = "AccountId" }))
{
    <div class="row">
        <div class="col-md-12">


            <h3 class="header smaller lighter blue">Infor Account</h3>

            <div class="clearfix">
                <div class="pull-right tableTools-container"></div>
            </div>
            <div class="table-header">
               Table Account
            </div>

            <div>
                <table id="dynamic_table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.LabelFor(model => model.First().Id)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().UserName)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().FirstName)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().LastName)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().Active)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().UserPass)
                            </th>
                            @*<th>
                                    @Html.LabelFor(model => model.First().CreateUser)
                                </th>
                                <th>
                                    @Html.LabelFor(model => model.First().CreateDate)
                                </th>
                                <th>
                                    @Html.LabelFor(model => model.First().UpdateUser)
                                </th>
                                <th>
                                    @Html.LabelFor(model => model.First().UpdateDate)
                                </th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Active)
                                </td>
                                <td>
                                    <a @Url.Action("ResetPass", "Account", new { id = item.Id })>Change</a>
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.CreateUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdateUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdateDate)
                                    </td>*@
                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        @*<a class="blue" href="#">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                        </a>*@

                                        <a class="green" href="@Url.Action("Edit", "Account", new {id = item.Id})">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a class="red" href="@Url.Action("Delete", "Account", new {id = item.Id})">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                @*<li>
                                                    <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                        <span class="blue">
                                                            <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>*@

                                                <li>
                                                    <a href="@Url.Action("Edit", "Account", new {id = item.Id})" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                        <span class="green">
                                                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="@Url.Action("Delete", "Account", new {id = item.Id})" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                        <span class="red">
                                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="btn-group">
                @Html.ActionLink("THÊM MỚI", "Create", null, new { @class = "btn blue inverse glyphicon glyphicon-plus", @id = "btnAdd" })
            </div>
        </div>
    </div>
}

<script src="/assets/js/jquery-ui.min.js"></script>

<script type="text/javascript">
    jQuery(function ($) {
        //initiate dataTables plugin
        $('#dynamic_table').DataTable({

        });
    });
</script>
