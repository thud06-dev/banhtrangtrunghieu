@model List<KoK_Source.Areas.Admin.Models.Config.ConfigModel>
@{
    ViewBag.Title = "Index";
    
}
<script type="text/javascript">
    if ('ontouchstart' in document.documentElement) document.write("<script src='assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
</script>
<script src="~/assets/js/jquery-2.1.4.min.js"></script>
<script src="~/assets/js/bootstrap.min.js"></script>
<script src="~/assets/js/jquery.dataTables.min.js"></script>
<script src="~/assets/js/jquery.dataTables.bootstrap.min.js"></script>
<script src="~/assets/js/dataTables.buttons.min.js"></script>
<script src="~/assets/js/buttons.flash.min.js"></script>
<script src="~/assets/js/buttons.html5.min.js"></script>
<script src="~/assets/js/buttons.print.min.js"></script>
<script src="~/assets/js/buttons.colVis.min.js"></script>
<script src="~/assets/js/dataTables.select.min.js"></script>

<script src="~/assets/js/ace-elements.min.js"></script>
<script src="~/assets/js/ace.min.js"></script>

@using (Html.BeginForm("Index", "Config", FormMethod.Post, new { id = "ConfigtId" }))
{
    <div class="row">
        <div class="col-md-12">


            <h3 class="header smaller lighter blue">Infor Config</h3>

            <div class="clearfix">
                <div class="pull-right tableTools-container"></div>
            </div>
            <div class="table-header">
                Table Config
            </div>

            <div>
                <table id="dynamic_table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.LabelFor(model => model.First().Id)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().ConfigTitle)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().ConfigKeyword)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().ConfigDecription)
                            </th>
                            <th>
                                @Html.LabelFor(model => model.First().ConfigHitCounter)
                            </th>
                           
                            <th>
                                @Html.LabelFor(model => model.First().Active)
                            </th>
                            @*<th>
                                    @Html.LabelFor(model => model.First().CreateUser)
                                </th>
                                <th>
                                    @Html.LabelFor(model => model.First().CreateDate)
                                </th>
                                <th>
                                    @Html.LabelFor(model => model.First().UpdateUser)
                                </th>
                                <th>
                                    @Html.LabelFor(model => model.First().UpdateDate)
                                </th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConfigTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConfigKeyword)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConfigDecription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConfigHitCounter)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Active)
                                </td>
                                
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.CreateUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdateUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdateDate)
                                    </td>*@
                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        @*<a class="blue" href="#">
                                                <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                            </a>*@

                                        <a class="green" href="@Url.Action("Edit", "Config", new {id = item.Id})">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a class="red" href="@Url.Action("Delete", "Config", new {id = item.Id})">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                @*<li>
                                                        <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                            <span class="blue">
                                                                <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>*@

                                                <li>
                                                    <a href="@Url.Action("Edit", "Config", new {id = item.Id})" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                        <span class="green">
                                                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="@Url.Action("Delete", "Config", new {id = item.Id})" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                        <span class="red">
                                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="btn-group">
                @*@Html.ActionLink("THÊM MỚI", "", null, new { @class = "btn blue inverse glyphicon glyphicon-plus", @id = "btnAdd" })*@
            </div>
        </div>
    </div>
}

<script src="/assets/js/jquery-ui.min.js"></script>

