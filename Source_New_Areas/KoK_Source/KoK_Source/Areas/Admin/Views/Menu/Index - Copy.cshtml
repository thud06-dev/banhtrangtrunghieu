@model List<KoK_Source.Areas.Admin.Models.Menu.MenuModels>
@using KoK_Source.Areas.Admin.Models.Menu
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Menu", FormMethod.Post, new { id = "myMenu" }))
{
    <div class="row">
        <div class="col-md-12">
            <article class="widget">
               
                <header class="widget__header">
                    <div class="widget__title">
                        <i class="pe-7s-menu"></i>
                        <h3>MenuList</h3>
                    </div>
                    <div class="widget__config">
                        <a href="#"><i class="pe-7f-refresh"></i></a>
                        <a href="#"><i class="pe-7s-close"></i></a>
                    </div>
                </header>
                <div class="widget__content table-responsive">
                    @if (Model.Count > 0 && Model != null)
                    {
                        <table class="table table-striped media-table">
                            <thead>
                                <tr>
                                    <th width="5%">@Html.LabelFor(m => m.First().Id)</th>
                                    <th width="20%">@Html.LabelFor(m => m.First().MenuName)</th>
                                    <th width="20%">@Html.LabelFor(m => m.First().MenuLink)</th>
                                    <th width="10%">@Html.LabelFor(m => m.First().MenuRank)</th>
                                    <th width="10%">@Html.LabelFor(m => m.First().MenuParentId)</th>
                                    <th width="10%">@Html.LabelFor(m => m.First().MENU_ACTIVE)</th>
                                    <th width="5%">Edit</th>
                                    <th width="5%">Del</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="spacer"></tr>
                                    <tr>
                                        <td>
                                            <div class="media">
                                                @item.Id
                                            </div>
                                        </td>
                                        <td>
                                            <p class="post__info">@item.MenuName</p>
                                        </td>
                                        <td>
                                            <p class="post__info">@item.MenuLink</p>
                                        </td>
                                        <td>
                                            <p class="post__info">@item.MenuRank</p>
                                        </td>
                                        <td>
                                            <p class="post__info">@item.MenuParentId</p>
                                        </td>
                                        <td>
                                            @if (item.MENU_ACTIVE == "0")
                                            {
                                                <input type="checkbox" class="custom-checkbox" id="cc2" />
                                                <label for="cc2"></label>
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-checkbox" id="cc0" checked />
                                                <label for="cc0"></label>
                                            }

                                        </td>
                                        <td>
                                            <a href="#" onclick="return false;" class="btn blue fixed"> Edit </a>
                                        </td>
                                        <td>
                                            <a href="#" onclick="return false;" class="post__del"><i class="pe-7f-close"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div> <!-- /widget__content -->
                <div class="btn-group">
                    @Html.ActionLink("THÊM MỚI", "Create", null, new { @class = "btn blue inverse glyphicon glyphicon-plus", @id = "btnAdd" })
                </div>
            </article><!-- /widget -->
        </div>

    </div>
    <!-- /row -->
}